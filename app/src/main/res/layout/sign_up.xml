<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sing_up.SignUp"
    tools:layout_editor_absoluteX="-28dp"
    tools:layout_editor_absoluteY="-249dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/firstNameInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:autofillHints=""
                android:hint="@string/enter_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#8D6E63"
                tools:ignore="MissingConstraints,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/lastNameInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:autofillHints=""
                android:hint="@string/enter_last_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#8D6E63"
                tools:ignore="MissingConstraints,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:autofillHints=""
                android:hint="@string/enter_email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColorHint="#8D6E63"
                tools:ignore="MissingConstraints,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/birthdayInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:autofillHints=""
                android:hint="@string/enter_birthday"
                android:inputType="datetime"
                android:minHeight="48dp"
                android:textColorHint="#8D6E63"
                tools:ignore="MissingConstraints,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:autofillHints=""
                android:hint="@string/password"
                android:inputType="textVisiblePassword"
                android:minHeight="48dp"
                android:textColorHint="#8D6E63"
                tools:ignore="MissingConstraints,DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/passwordVerifyInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:autofillHints=""
                android:hint="@string/password"
                android:inputType="textVisiblePassword"
                android:textColorHint="#8D6E63"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck,VisualLintTextFieldSize" />

            <Button
                android:id="@+id/addressPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/next"
                tools:ignore="MissingConstraints,DuplicateSpeakableTextCheck,VisualLintButtonSize" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>