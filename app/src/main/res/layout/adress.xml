<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/AdressTitleText"
        android:layout_width="207dp"
        android:layout_height="45dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="46dp"
        android:gravity="center"
        android:text="@string/adress"
        app:layout_constraintBottom_toTopOf="@+id/countries_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/CountryText"
        android:layout_width="98dp"
        android:layout_height="41dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/country_of_residence"
        app:layout_constraintBottom_toTopOf="@+id/RegionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,TextSizeCheck" />

    <AutoCompleteTextView
        android:id="@+id/countries_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="18dp"
        android:dropDownHeight="100dp"
        android:ems="10"
        android:hint="@string/country"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        app:layout_constraintBottom_toTopOf="@+id/region_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/CountryText"
        app:layout_constraintTop_toBottomOf="@+id/AdressTitleText"
        tools:ignore="MissingConstraints">

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/RegionText"
        android:layout_width="98dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="49dp"
        android:gravity="center"
        android:text="@string/region"
        app:layout_constraintBottom_toTopOf="@+id/StreetText"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <AutoCompleteTextView
        android:id="@+id/region_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="40dp"
        android:dropDownHeight="100dp"
        android:ems="10"
        android:hint="@string/region_list"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/Street"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/RegionText"
        tools:ignore="MissingConstraints">

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/StreetText"
        android:layout_width="98dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:text="@string/street"
        app:layout_constraintBottom_toTopOf="@+id/PostalCodeText"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Street"
        android:layout_width="199dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="34dp"
        android:autofillHints=""
        android:hint="@string/enter_your_street"
        android:inputType="text"
        android:textColorHint="#8D6E63"
        app:layout_constraintBottom_toTopOf="@+id/PostalCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/StreetText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/PostalCodeText"
        android:layout_width="98dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="345dp"
        android:gravity="center"
        android:text="@string/postal_code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,TextSizeCheck" />

    <EditText
        android:id="@+id/PostalCode"
        android:layout_width="199dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="206dp"
        android:autofillHints=""
        android:hint="@string/enter_postal_code"
        android:inputType="textPostalAddress"
        android:textColorHint="#8D6E63"
        app:layout_constraintBottom_toTopOf="@+id/FinishSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PostalCodeText"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/FinishSignUp"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_marginStart="231dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="84dp"
        android:gravity="center"
        android:text="@string/finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,DuplicateSpeakableTextCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>